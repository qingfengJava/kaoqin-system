<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qingfeng.mapper.AttendanceMapper">

    <resultMap type="com.qingfeng.entity.Attendance" id="AttendanceInfo">
        <result column="id" property="id"/>
        <result column="course_id" property="courseId"/>
        <result column="student_id" property="studentId"/>
        <result column="type" property="type"/>
        <result column="date" property="date"/>
    </resultMap>

    <select id="queryList" resultMap="AttendanceInfo">
        SELECT *
        from s_attendance
        where id_deleted = 0
        <if test="courseId != null">
            and course_id = #{courseId}
        </if>
        <if test="studentId != null">
            and student_id = #{studentId}
        </if>
        <if test="type != null">
            and type = #{type}
        </if>
        <if test="date != null">
            and date = #{date}
        </if>
        limit #{startIndex},#{pagesize}
    </select>

    <select id="queryCount" resultType="int">
        select count(*) from s_attendance
        <where>
            <if test="courseId!=null">
            and course_id = #{courseId}
            </if>
            <if test="studentId!=null">
            and student_id = #{studentId}
            </if>
            <if test="type!=null">
            and type = #{type}
            </if>
            <if test="date!=null">
            and date = #{date}
            </if>
        </where>
    </select>

    <update id="reissue">
        update s_attendance set type = '补签' where id = #{attendanceId}
    </update>
</mapper>